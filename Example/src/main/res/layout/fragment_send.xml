<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".SendActivity$PlaceholderFragment">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Number of points to send" />

    <EditText
        android:id="@+id/count"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="number"
        android:text="1" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Size of points" />

    <EditText
        android:id="@+id/size"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="number"
        android:text="128" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Threads" />

    <EditText
        android:id="@+id/threads"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:inputType="number"
        android:text="1" />

    <Button
        android:id="@+id/start_aidl"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="write(StreamWriter)" />

    <Button
        android:id="@+id/start_content_provider1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="write(AsyncBulkInsertHandler)" />

    <Button
        android:id="@+id/start_content_provider2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="write(AsyncQueryHandler)" />

    <Button
        android:id="@+id/start_content_provider3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="write(ContentResolver)" />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="info: " />

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="init: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="send: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="write: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="close: " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="total: " />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/init"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/send"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/write"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/close"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/total"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </TableRow>
    </TableLayout>
</LinearLayout>
